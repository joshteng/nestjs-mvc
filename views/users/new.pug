extends ../layouts/base.pug

block content
  h1 Sign Up

  if validation_errors
    .alert.alert-warning.alert-dismissible.fade.show= message
      each message in validation_errors
        = message
        br
      button(type="close", class="close", data-dimiss="alert", aria-label="close")
        span(aria-hidden="true") &times;

  form(action='/users' method='POST')
    .form-group
      label() Email address
      input.form-control(name="email" type='email' aria-describedby='emailHelp')
      small#emailHelp.form-text.text-muted We&apos;ll never share your email with anyone else.
    .form-group
      label() Password
      input.form-control(name="password" type='password')
    button.btn.btn-primary(type='submit') Submit
